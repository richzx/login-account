---
import Layout from '../layouts/Layout.astro';
import Ilustration from '../assets/Illustration.svg';
import IconGoogle from '../assets/google-logo.svg';
---

<Layout title='Create account - rodz'>
  <main class="w-full px-5 lg:px-0 flex justify-center gap-4">
    <img class="hidden lg:block" src={Ilustration.src} alt="ilustracion de la vista crear cuenta">

    <div class="p-12 flex flex-col gap-6">
      <h2 class="text-[32px] leading-none text-[#333] font-medium">Create an account</h2>
      <div class="w-full flex flex-col gap-1">
        <span class="text-base text-[#666]">First name</span>
        <input type="text" class="w-full max-w-[534px] border border-[#6666666e] rounded-lg p-2">
      </div>
      <div class="w-full flex flex-col gap-1">
        <span class="text-base text-[#666]">Last name</span>
        <input type="text" class="w-full max-w-[534px] border border-[#6666666e] rounded-lg p-2">
      </div>
      <div class="w-full flex flex-col gap-1">
        <span class="text-base text-[#666]">Email</span>
        <input type="email" class="w-full max-w-[534px] border border-[#6666666e] rounded-lg p-2">
      </div>
      <div class="w-full max-w-[534px] flex items-start gap-2">
        <input type="checkbox" name="" id="" >
        <span class="text-base text-[#111]">By creating an account, I agree to our Terms of use 
          and Privacy Policy </span>
      </div>
      <button class="w-full flex justify-center text-xl py-4 bg-[#111] text-[#FFF] rounded-full opacity-25">
        Create an account
      </button>
      <div class="w-full flex items-center gap-6">
        <hr class="w-full">
        <span class="text-[#666] text-xl">OR</span>
        <hr class="w-full">
      </div>
      <button class="w-full flex gap-4 justify-center items-center text-xl py-4 border border-[#111] bg-transparent text-[#111] rounded-full active:ring-4 active:ring-slate-200">
        <img src={IconGoogle.src} alt="icono de google crear cuenta">
        Continue with Google
      </button>
    </div>
  </main>
</Layout>